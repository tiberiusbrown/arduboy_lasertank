import vars;

void draw_help_map(u8[16] m)
{
    constexpr u8 X = 95;
    constexpr u8 Y = 20;
    u8 off = (frame >> 2) & 3;
    if(!tile_anim) off = 0;
    $draw_rect(X-2, Y-2, 35, 35, WHITE);
    for(u8 r = 0; r < 4; ++r)
        for(u8 c = 0; c < 4; ++c)
            $draw_sprite(c*8+X, r*8+Y, TILES8, m[r*4+c] + off);
}

void draw_help_tank(u8 x, u8 y, u8 dir)
{
    constexpr u8 X = 95;
    constexpr u8 Y = 20;
    $draw_sprite(x*8+X, y*8+Y, TILES8, T_TANK + dir);
}

